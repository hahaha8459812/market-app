generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  PLAYER
}

enum ShopRole {
  OWNER
  CLERK
  CUSTOMER
}

enum WalletMode {
  PERSONAL
  TEAM
}

enum ProductPriceState {
  PRICED
  UNPRICED
  DISABLED_CURRENCY
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  role         Role     @default(PLAYER)
  createdAt    DateTime @default(now())
  members      Member[]
  ownedShops   Shop[]
}

model Shop {
  id            Int      @id @default(autoincrement())
  name          String
  ownerId       Int
  allowCustomerInc Boolean @default(false)
  allowCustomerDec Boolean @default(false)
  walletMode    WalletMode @default(PERSONAL)
  isSwitching   Boolean    @default(false)
  createdAt     DateTime @default(now())
  stalls        Stall[]
  members       Member[]
  currencies    Currency[]
  teamBalances  TeamBalance[]
  invites       InviteCode[]
  logs          Log[]

  owner User @relation(fields: [ownerId], references: [id])
}

model Currency {
  id        Int      @id @default(autoincrement())
  shopId    Int
  name      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  shop Shop @relation(fields: [shopId], references: [id])
  memberBalances MemberBalance[]
  teamBalances   TeamBalance[]
  products       Product[]
  logs           Log[]

  @@unique([shopId, name])
  @@index([shopId, isActive])
}

model Stall {
  id          Int      @id @default(autoincrement())
  shopId      Int
  name        String
  description String?
  isActive    Boolean  @default(true)
  products    Product[]

  shop Shop @relation(fields: [shopId], references: [id])
}

model Product {
  id           Int      @id @default(autoincrement())
  stallId      Int
  name         String
  icon         String?
  sortOrder    Int      @default(0)
  priceState   ProductPriceState @default(UNPRICED)
  priceAmount  Int?
  priceCurrencyId Int?
  stock        Int
  isLimitStock Boolean  @default(true)
  isActive     Boolean  @default(true)
  description  String?
  createdAt    DateTime @default(now())

  stall Stall @relation(fields: [stallId], references: [id])
  priceCurrency Currency? @relation(fields: [priceCurrencyId], references: [id])

  @@index([stallId, sortOrder])
}

model Member {
  id         Int         @id @default(autoincrement())
  shopId     Int
  userId     Int
  charName   String
  role       ShopRole
  isActive   Boolean     @default(true)
  balances   MemberBalance[]
  inventory  Inventory[]
  logs       Log[]

  shop Shop @relation(fields: [shopId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@unique([shopId, userId])
  @@index([shopId, role])
}

model MemberBalance {
  id         Int @id @default(autoincrement())
  memberId   Int
  currencyId Int
  amount     Int @default(0)

  member   Member   @relation(fields: [memberId], references: [id])
  currency Currency @relation(fields: [currencyId], references: [id])

  @@unique([memberId, currencyId])
  @@index([currencyId])
}

model TeamBalance {
  id         Int @id @default(autoincrement())
  shopId     Int
  currencyId Int
  amount     Int @default(0)

  shop     Shop     @relation(fields: [shopId], references: [id])
  currency Currency @relation(fields: [currencyId], references: [id])

  @@unique([shopId, currencyId])
  @@index([currencyId])
}

model InviteCode {
  id             Int      @id @default(autoincrement())
  shopId         Int
  code           String   @unique
  expiresAt      DateTime
  createdAt      DateTime @default(now())
  createdBy      Int?
  isActive       Boolean  @default(true)

  shop Shop @relation(fields: [shopId], references: [id])

  @@index([shopId, expiresAt])
}

model Inventory {
  id        Int    @id @default(autoincrement())
  memberId  Int
  productId Int?
  name      String
  icon      String?
  quantity  Int
  extraDesc String?

  member Member @relation(fields: [memberId], references: [id])

  @@unique([memberId, name])
}

model Log {
  id        Int      @id @default(autoincrement())
  shopId    Int
  memberId  Int?
  actorId   Int?
  scope     String? // TEAM | PERSONAL | null
  currencyId Int?
  type      String
  content   String
  amount    Int      @default(0)
  beforeAmount Int?
  afterAmount  Int?
  createdAt DateTime @default(now())

  shop   Shop   @relation(fields: [shopId], references: [id])
  member Member? @relation(fields: [memberId], references: [id])
  currency Currency? @relation(fields: [currencyId], references: [id])

  @@index([shopId, createdAt])
}
