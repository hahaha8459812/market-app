generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  PLAYER
}

enum ShopRole {
  OWNER
  CLERK
  CUSTOMER
}

model User {
  id           Int      @id @default(autoincrement())
  username     String   @unique
  passwordHash String
  role         Role     @default(PLAYER)
  createdAt    DateTime @default(now())
  members      Member[]
  ownedShops   Shop[]
}

model Shop {
  id            Int      @id @default(autoincrement())
  name          String
  ownerId       Int
  inviteCode    String   @unique
  currencyRules Json
  createdAt     DateTime @default(now())
  stalls        Stall[]
  members       Member[]
  walletGroups  WalletGroup[]
  logs          Log[]

  owner User @relation(fields: [ownerId], references: [id])
}

model Stall {
  id          Int      @id @default(autoincrement())
  shopId      Int
  name        String
  description String?
  isActive    Boolean  @default(true)
  products    Product[]

  shop Shop @relation(fields: [shopId], references: [id])
}

model Product {
  id           Int      @id @default(autoincrement())
  stallId      Int
  name         String
  icon         String?
  price        Int
  stock        Int
  isLimitStock Boolean  @default(true)
  isActive     Boolean  @default(true)
  description  String?
  createdAt    DateTime @default(now())

  stall Stall @relation(fields: [stallId], references: [id])
}

model Member {
  id         Int         @id @default(autoincrement())
  shopId     Int
  userId     Int
  charName   String
  role       ShopRole
  isActive   Boolean     @default(true)
  balanceRaw Int         @default(0) // personal balance (min unit)
  walletId   Int?
  inventory  Inventory[]
  logs       Log[]

  shop Shop @relation(fields: [shopId], references: [id])
  user User @relation(fields: [userId], references: [id])
  wallet WalletGroup? @relation(fields: [walletId], references: [id])

  @@unique([shopId, userId])
  @@index([shopId, role])
}

model WalletGroup {
  id          Int      @id @default(autoincrement())
  shopId      Int
  name        String
  balanceRaw  Int      @default(0) // shared balance (min unit)
  createdAt   DateTime @default(now())
  isActive    Boolean  @default(true)
  members     Member[]
  logs        Log[]

  shop Shop @relation(fields: [shopId], references: [id])

  @@unique([shopId, name])
}

model Inventory {
  id        Int    @id @default(autoincrement())
  memberId  Int
  productId Int?
  name      String
  icon      String?
  quantity  Int
  extraDesc String?

  member Member @relation(fields: [memberId], references: [id])

  @@unique([memberId, name])
}

model Log {
  id        Int      @id @default(autoincrement())
  shopId    Int
  memberId  Int?
  walletId  Int?
  actorId   Int?
  type      String
  content   String
  amount    Int      @default(0)
  createdAt DateTime @default(now())

  shop   Shop   @relation(fields: [shopId], references: [id])
  member Member? @relation(fields: [memberId], references: [id])
  wallet WalletGroup? @relation(fields: [walletId], references: [id])

  @@index([shopId, createdAt])
}
