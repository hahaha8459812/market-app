[super_admin]
username = "admin"
# 超管密码按你的需求以明文写在配置文件里（注意保护好 config.toml 文件权限）
password = "change-me"
# 可选：如果你想用 bcrypt hash，也支持 password_hash（优先级更高）
# password_hash = "$2b$10$REPLACE_WITH_YOUR_BCRYPT_HASH.............................."

[features]
allow_register = true

[logs]
# 所有成员共享同一份日志的条数上限
shared_limit = 200

[ws]
# 服务端 ping 周期（毫秒），浏览器会自动 pong，无需额外心跳消息
ping_interval_ms = 25000
# 预留字段：客户端超时（未来可用于自定义剔除策略）
client_timeout_ms = 60000
