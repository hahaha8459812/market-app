[super_admin]
username = "admin"
# 推荐使用 password_hash（bcrypt），避免明文密码落盘。
# 生成示例（在容器里执行）：docker compose exec market-app node -e "require('bcrypt').hash('change-me',10).then(console.log)"
password_hash = "$2b$10$REPLACE_WITH_YOUR_BCRYPT_HASH.............................."

[features]
allow_register = true

[ws]
# 服务端 ping 周期（毫秒），浏览器会自动 pong，无需额外心跳消息
ping_interval_ms = 25000
# 预留字段：客户端超时（未来可用于自定义剔除策略）
client_timeout_ms = 60000
